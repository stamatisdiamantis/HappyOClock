<android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/redy"
    android:elevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.example.xdiam0nd.happyoclock.Utils.LetterImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/iverwtisei"
            android:layout_margin="8dp"/>


        <!--titlos toy kathe stoixiou apo to listview-->
        <TextView
            android:id="@+id/tvErwtisiMain"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/Erwtimatologio"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/iverwtisei"
            android:layout_toRightOf="@+id/iverwtisei"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <CheckBox
            android:id="@+id/cberwtisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"/>
            <!--android:focusable="false"-->
            <!--android:clickable="false"/>-->



    </RelativeLayout>





</android.support.v7.widget.CardView>


