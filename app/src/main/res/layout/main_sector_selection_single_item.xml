<android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/redy"
    android:elevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <ImageView
            android:layout_width="80dp"
            android:layout_height="105dp"
            android:id="@+id/ivMain"
            android:layout_marginLeft="11dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp"
            />
        <!--titlos toy kathe stoixiou apo to listview-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMain"
            android:text="Timetable"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/ivMain"
            android:textSize="24sp"/>
        <!--perigrafi gia to stoixio mesa-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDescription"
            android:layout_marginLeft="15dp"
            android:text="Description"
            android:layout_below="@+id/tvMain"
            android:layout_toRightOf="@+id/ivMain"
            android:textSize="16dp"
            />
        <!--TIP gia na patisi o xristis wste na sunexisi parakatw-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvClick"
            android:textSize="13dp"
            android:text="Πατήστε εδώ"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginRight="12dp"
            android:layout_below="@+id/tvDescription"
            android:layout_alignBottom="@+id/ivMain"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>


